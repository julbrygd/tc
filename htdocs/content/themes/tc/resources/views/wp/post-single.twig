{% extends 'layout/main.twig' %}
{% block main %}
    <article>
        <h2>{{ post.post_title|title }}</h2>
        <p class="blog-post-meta">{{ post.post_date }} {{ fn.__('by', text_domain) }} {{ fn.get_userdata(post.post_author).display_name }}</p>
        <div>{{ wpautop(post.post_content)|raw }}</div>
    </article>
    
        
    <!-- WP Coments {{ fn.get_comments_number() }}-->
    {{ fn.the_comments_navigation() }}
    {{ fn.wp_list_comments() }}
    {{ fn.the_comments_navigation() }}
    {{ fn.comment_form() }}
    <!-- WP Coments -->
{% endblock %}